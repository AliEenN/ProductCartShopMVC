@model IEnumerable<ProductCartShop.Models.Product>

@{
    ViewData["Title"] = "Home";
}

<div class="container whiteBackground">

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            No Products In The List ...!
        </div>
    }
    else
    {
        foreach (var product in Model)
        {
            <div class="row">
                <div class="col-12">

                    <div class="border border-info col-12" style="margin-top:10px;margin-bottom:10px;padding:10px">
                        <div class="row">
                            <div class="col-12">
                                <div class="row pr-3">
                                    <div class="col-8">
                                        <label class="text-primary font-si" style="font-size:21px;">
                                            @product.Name
                                        </label>
                                    </div>

                                    <div class="col-4 text-right" style="color:maroon">
                                        <h5>
                                            $ @product.Price
                                        </h5>
                                    </div>
                                </div>

                                <div class="row col-12 text-justify d-none d-md-block">
                                    <p>
                                        @product.Description
                                    </p>
                                </div>

                                <div class="col-12 col-md-3 offset-md-9 text-right">
                                    <a href="@Url.Action("AddToShoppingCarts", new { @product.Id})" class="btn btn-success form-control">Add To Shopping Carts</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="p-4"></div>
        }
    }

</div>